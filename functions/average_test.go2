package functions

import "testing"

var (
    avgTests = []struct {
        in []int
        out int
    }{
        {
            []int{},
            0,
        },
        {
            []int{1,2,3},
            2,
        },
    }
)

// TestChaining
func TestAverage(t *testing.T) {
    for _,test := range avgTests {
        t.Run("", func(t *testing.T) {
            res := Average(test.in)
            if int(res) != test.out {
                t.Errorf("expected %v but got %v", test.out, res)
            }
        })
    }
}
